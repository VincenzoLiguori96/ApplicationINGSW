<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"

                >


                <TextView
                    android:id="@+id/shipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="SHIPPING TO:"
                    android:textColor="#635E5E"
                    android:textSize="12dp" />


                <TextView

                    android:id="@+id/editButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:background="#00000000"
                    android:gravity="right"
                    android:text="EDIT"
                    android:textColor="#51a3df"
                    android:textSize="12dp"

                    />


            </LinearLayout>


            <TextView
                android:id="@+id/buyerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Ester Smith"
                android:textColor="#333333"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buyerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="309, Baker Street, 390022 NY"
                android:textColor="#333333"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8"
            android:gravity="bottom"/>



        <ListView

            android:layout_marginBottom="89dp"
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dad8d8"
        android:gravity="bottom"
        android:layout_above="@+id/amount"
        android:elevation="1dp"
        />



    <!--******TOTAL*******-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/payButton"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"

        >


        <TextView
            android:id="@+id/total1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TOTAL AMOUNT"
            android:textColor="#333333"
            android:textSize="12dp"

            />


        <TextView

            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="#00000000"
            android:gravity="right"
            android:text="$ 858.00"
            android:textColor="#333333"
            android:textSize="18dp"

            />


    </LinearLayout>


    

    <TextView
        android:id="@+id/payButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#51a3df"
        android:text="CONFIRM &amp; PAY"
        android:textSize="16dp"
        android:textColor="#fff"
        android:padding="16dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:drawableRight="@drawable/ic_go_next"
        />


</RelativeLayout>